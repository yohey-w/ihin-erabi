---
interface Service {
  name: string;
  type: string;
  monthlyFee: string;
  entryFee: string;
  members: string;
  link: string;
  recommended?: boolean;
}
interface Props {
  services: Service[];
}
const { services } = Astro.props;
---
<div class="table-responsive">
  <table class="comparison-table">
    <thead>
      <tr>
        <th scope="col">サービス名</th>
        <th scope="col">タイプ</th>
        <th scope="col">月額費用</th>
        <th scope="col">入会金</th>
        <th scope="col">会員数</th>
        <th scope="col">詳細</th>
      </tr>
    </thead>
    <tbody>
      {services.map((s) => (
        <tr class={s.recommended ? 'recommended' : ''}>
          <td class="comparison-name">
            <strong>{s.name}</strong>
            {s.recommended && <span class="rec-badge">おすすめ</span>}
          </td>
          <td>{s.type}</td>
          <td>{s.monthlyFee}</td>
          <td>{s.entryFee}</td>
          <td>{s.members}</td>
          <td>
            <a href={s.link} rel="nofollow sponsored" target="_blank" class="comparison-link">
              公式サイト
            </a>
          </td>
        </tr>
      ))}
    </tbody>
  </table>
</div>
